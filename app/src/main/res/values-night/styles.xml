<resources>
    <!-- References. -->
    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="textColorRef"/>
    <attr format="reference" name="tickColor"/>
    <attr format="reference" name="themeChangeID"/>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Dark theme. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardStyle">@style/CustomCardView.dark</item>
        <item name="textColorRef">@color/colorText</item>
        <item name="tickColor">@color/colorText</item>
    </style>

    <style name = "CustomCardView.light" parent="CardView">
        <item name="cardBackgroundColor">#FDFDFD</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name = "CustomCardView.dark" parent="CardView">
        <item name="cardBackgroundColor">#1D1D1D</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>